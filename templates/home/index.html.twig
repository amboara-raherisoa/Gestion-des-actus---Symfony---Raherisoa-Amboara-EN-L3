{% extends 'base.html.twig' %}

{% block content_wrapper %}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
        <div class="col-sm-6">
            <h1>Actualités</h1>
        </div>
        </div>
    </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        {% block titre_tableau %}Toutes les actualités{% endblock %} <span class="text-secondary">(Cliquer pour voir les détails)</span>
                    </h3>
                </div>
                <!-- ./card-header -->
                <div class="card-body">
                    <table class="table table-bordered table-hover">

                    <thead>
                        <tr>
                        <th>Thème</th>
                        <th>Titre</th>
                        <th>Date de publication</th>
                        <th>Rubrique</th>
                        <th>Rédacteur</th>
                        </tr>
                    </thead>

                    <tbody>

                        {% for actu in actus %}
                            <tr data-widget="expandable-table" aria-expanded="false">
                            <td>{{ actu.theme }}</td>
                            <td>{{ actu.titre }}</td>
                            <td>{{ actu.datePublication | date("d/m/Y") }}</td>
                            <td>{{ actu.rubrique }}</td>
                            <td>{{ actu.redacteur }}</td>
                            </tr>
                            <tr class="expandable-body">
                            <td colspan="5">
                                <p>
                                    <b>{{ actu.breveDescription }}</b>
                                </p>
                                <p>
                                    {{ actu.contenu }}
                                </p>
                            </td>
                            </tr>
                        {% endfor %}

                    </tbody>

                    </table>
                </div>
                <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

{% endblock %}
